<%- include('partials/header'); -%>

    <!-- Simple Form -->
    <section id="contact" class="section-1 odd form">
        <div class="container smaller">
            <div class="row text-center intro">
                <div class="col-12">
                    <h2>Admin Login</h2>
                </div>
            </div>
            <form id="login-form" class="leverage-simple-form">
                <div class="row form-group-margin">
                    <div class="col-12 col-md-6 m-0 p-2 input-group">
                        <input type="text" name="username" id="username" class="form-control field-name"
                            placeholder="Username" required>
                    </div>
                    <div class="col-12 col-md-6 m-0 p-2 input-group">
                        <input type="password" name="password" id="password" class="form-control field-password"
                            placeholder="Password" required>
                    </div>
                    <div class="col-12 col-12 m-0 pl-md-2">
                        <span class="form-alert" id="form-alert-span"></span>
                    </div>
                    <div class="col-12 input-group m-0 p-2">
                        <button class="btn primary-button" type="submit">SEND</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <script src="assets/js/login.js"></script>
    <%- include('partials/footer'); -%>